{% extends 'BKCoreBundle::layout.html.twig' %}

{% block page_title %}Login to Beeketing{% endblock page_title %}

{% block header %}
<header class="login-page">

    <div class="container">
        <nav class="navigation navigation-header">
            {% block navigation %}
                <div class="navigation-brand">
                    <div class="brand-logo">
                        <a href="{{ path('bk_core_homepage') }}" class="logo" title="Beeketing">
                            <span class="sr-only">Beeketing</span></a>
                    </div>
                </div>
            {% endblock navigation %}
        </nav>
        <div class="navbar-header">
            <p>Menu</p>
            <button class="navbar-toggle collapsed menu-button" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <nav class="navbar-collapse bs-navbar-collapse collapse menu" role="navigation" style="height: 1px;">
            <p>Menu</p>
            <button class="navbar-toggle collapsed menu-button" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <ul class="nav navbar-nav">
                {#<li>#}
                {#<a href="#" data-hover="Features"><span>Features</span></a>#}
                {#</li>#}
                <li>
                    <a href="{{ url('bk_core_pricing') }}" data-hover="Pricing"><span>Pricing</span></a>
                </li>
                <li>
                    <a href="{{ url('bk_core_login') }}" data-hover="Login"><span>Login</span></a>
                </li>
                <li class="Get-started">
                    <a href="{{ url('bk_core_sign_up') }}" data-hover="Get started"><span>Get started</span></a>
                </li>
            </ul>
        </nav>
    </div>

</header>
{% endblock header %}
{% block main_content %}
    {#Html here#}
    <section id="join-login">
	    <div class="container">
            <div class="bg-login">
                <h2>Login with <span> <img src="{{ asset('bundles/bkcore/images/login/img-shopify.png') }}" alt="shopify"/></span> shop </h2>
                <p>Enter your shopify address to get started </p>
                <div class="">
                    <div class="form-group">
                        <input type="email" required="required" class="form-control" placeholder="Enter your email address" id="email-input" name="email">
                    </div>
                    <div class="button-login">
                        <a href="#login">Log in</a>
                    </div>
                </div>
            </div>
    	</div>
    </section>
{% endblock %}
{% block footer %}
    <footer id="footer-login" class="footer light">
        <div class="container">
            <div style="height: 39px;" class="space-height"></div>
            <div class="social-links">
                <ul class="nav nav-pills">
                    <li class="facebook">
                        <iframe src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fbeeketing&amp;width=100&amp;layout=button_count&amp;action=like&amp;show_faces=false&amp;share=false&amp;height=21"
