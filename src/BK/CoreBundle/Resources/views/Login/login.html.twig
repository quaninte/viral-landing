{% extends '@BKCore/layout.html.twig' %}
{% block navigation %}
    <div class="navigation-brand">
        <div class="brand-logo">
            <a href="{{ path('bk_core_homepage') }}" class="logo" title="Beeketing">
                <span class="sr-only">Beeketing</span></a>
        </div>
    </div>
{% endblock navigation %}
{% block main_content %}
    {#Html here#}
    <section id="join-login">
	    <div class="container">
            <div class="bg-login">
                <h2>Login with <span> <img src="{{ asset('bundles/bkcore/images/login/img-shopify.png') }}" alt="shopify"/></span> shop </h2>
                <p>Enter your shopify address to get started </p>
                <div class="">
                    <div class="form-group">
                        <input type="email" required="required" class="form-control" placeholder="Enter your email address" id="email-input" name="email">
                    </div>
                    <div class="button-login">
                        <a href="#login">Log in</a>
                    </div>
                </div>
            </div>
    	</div>
    </section>
{% endblock %}
{% block footer %}
    <footer id="footer-login" class="footer light">
        <div class="container">
            <div style="height: 39px;" class="space-height"></div>
            <div class="social-links">
                <ul class="nav nav-pills">
                    <li class="facebook">
                        <iframe src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fbeeketing&amp;width=100&amp;layout=button_count&amp;action=like&amp;show_faces=false&amp;share=false&amp;height=21"
                                scrolling="no" frameborder="0"
                                style="border:none; overflow:hidden; width:100px; height:21px;"
                                allowTransparency="true"></iframe>
                    </li>
                    <li class="twitter">
                        <iframe allowtransparency="true" frameborder="0" scrolling="no"
                                src="//platform.twitter.com/widgets/follow_button.html?screen_name=beeketing"
                                style="width:200px; height:20px;"></iframe>
                    </li>
                </ul>
            </div>
        </div>
        <div class="copyright-mobile"><a style="color: white;" href="mailto:quan@beeketing.com">Contact Us</a> 
            <p>&copy; Beeketing 2014. All rights reserved.</p>
        </div>
        <div class="copyright"><a style="color: white;" href="mailto:quan@beeketing.com">Contact Us</a> | &copy; Beeketing 2014. All rights reserved.
        </div>
    </footer>
{% endblock footer %}