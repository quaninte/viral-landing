    {% javascripts
    '@BKCoreBundle/Resources/public/js/jquery-1.9.1.min.js'
    '@BKCoreBundle/Resources/public/js/bootstrap.min.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% if ga_tracking_id %}
    <script>
        (function (i, s, o, g, r, a, m) {
