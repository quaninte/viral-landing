<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <!--[if IE]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
    <title>{% block page_title %}World's first virtual marketer ever - Beeketing{% endblock page_title %}</title>

    <meta property="og:image" content="{{ asset('facebook-share.png', null, true) }}"/>
    <meta name="description"
          content="Beeketing, the first virtual marketer ever help businesses plan and execute the best marketing strategy to increase sales and improve customer relationship."/>
    <meta name="keywords" content="beeketing, marekting automation, email markerting"/>

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
    {% block head_styles %}
        {% stylesheets filter='less, cssrewrite, ?yui_css'
            'bundles/bkcore/assets/css/bootstrap.min.css'
            'bundles/bkcore/assets/css/font-awesome.min.css'
            'bundles/bkcore/assets/css/font-lineicons.less'
            'bundles/bkcore/assets/css/animate.css'
            'bundles/bkcore/assets/css/toastr.min.css'
            'bundles/bkcore/assets/css/style.css'
            'bundles/bkcore/assets/css/login.css'
            'bundles/bkcore/assets/css/sign_up.css'
            'bundles/bkcore/assets/css/pricing.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
        {% endstylesheets %}

        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700' rel='stylesheet' type='text/css'>

        {% if showSumo is not defined or showSumo == false %}
        <style type="text/css">
            #sumotest-badge {
                display: none !important;
            }
        </style>
        {% endif %}
    {% endblock head_styles %}

    {% block head_scripts %}
        <!--[if lt IE 9]>
        {% javascripts
        '@BKCoreBundle/Resources/public/assets/js/html5.js'
        '@BKCoreBundle/Resources/public/assets/js/respond.min.js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <![endif]-->

        {% if ga_tracking_id %}
            <script>
                (function (i, s, o, g, r, a, m) {
                    i['GoogleAnalyticsObject'] = r;
                    i[r] = i[r] || function () {
                        (i[r].q = i[r].q || []).push(arguments)
                    }, i[r].l = 1 * new Date();
                    a = s.createElement(o),
                            m = s.getElementsByTagName(o)[0];
                    a.async = 1;
                    a.src = g;
                    m.parentNode.insertBefore(a, m)
                })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

                ga('create', '{{ ga_tracking_id }}', 'auto');
                ga('send', 'pageview');

            </script>
        {% endif %}
    {% endblock head_scripts %}
</head>

<body id="landing-page">

<!-- Preloader -->
<div id="mask">
    <div id="loader"></div>
</div>
{% block header %}
<header>

    <div class="container">
        <nav class="navigation navigation-header">
            {% block navigation %}
                <div class="navigation-brand">
                    <div class="brand-logo">
                        <a href="{{ path('bk_core_homepage') }}" class="logo" title="Beeketing">
                            <span class="sr-only">Beeketing</span></a>
                    </div>
                </div>
            {% endblock navigation %}
        </nav>
        <div class="navbar-header">
            <p>Menu</p>
            <button class="navbar-toggle collapsed menu-button" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <nav class="navbar-collapse bs-navbar-collapse collapse menu" role="navigation" style="height: 1px;">
            <p>Menu</p>
            <button class="navbar-toggle collapsed menu-button" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <ul class="nav navbar-nav">
                {#<li>#}
                    {#<a href="#" data-hover="Features"><span>Features</span></a>#}
                {#</li>#}
                <li>
                    <a href="{{ url('bk_core_pricing') }}" data-hover="Pricing"><span>Pricing</span></a>
                </li>
                <li>
                    <a href="{{ url('bk_core_login') }}" data-hover="Login"><span>Login</span></a>
                </li>
                <li class="Get-started">
                    <a href="{{ url('bk_core_sign_up') }}" data-hover="Get started"><span>Get started</span></a>
                </li>
            </ul>
        </nav>
    </div>

</header>
{% endblock header %}
{% block main_content %}{% endblock main_content %}

{% block footer %}
    <footer id="footer" class="footer light">
        <div class="container">
            <div style="height: 120px;" class="space-height"></div>
            <div class="social-links">
                <ul class="nav nav-pills">
                    <li class="facebook">
                        <iframe src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fbeeketing&amp;width=100&amp;layout=button_count&amp;action=like&amp;show_faces=false&amp;share=false&amp;height=21"
                                scrolling="no" frameborder="0"
                                style="border:none; overflow:hidden; width:100px; height:21px;"
                                allowTransparency="true"></iframe>
                    </li>
                    <li class="twitter">
                        <iframe allowtransparency="true" frameborder="0" scrolling="no"
                                src="//platform.twitter.com/widgets/follow_button.html?screen_name=beeketing"
                                style="width:200px; height:20px;"></iframe>
                    </li>
                </ul>
            </div>
        </div>
        <div class="copyright-mobile"><a style="color: white;" href="mailto:quan@beeketing.com">Contact Us</a> 
            <p>&copy; Beeketing 2014. All rights reserved.</p>
        </div>
        <div class="copyright"><a style="color: white;" href="mailto:quan@beeketing.com">Contact Us</a> | &copy; Beeketing 2014. All rights reserved.
        </div>
    </footer>
{% endblock footer %}

<div class="back-to-top"><i class="fa fa-angle-up fa-3x"></i></div>

{% block foot_scripts %}
    {% javascripts
    '@BKCoreBundle/Resources/public/assets/js/jquery-1.11.0.min.js'
    '@BKCoreBundle/Resources/public/assets/js/bootstrap.min.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.flexslider-min.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.nav.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.appear.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.plugin.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.countdown.js'
    '@BKCoreBundle/Resources/public/assets/js/waypoints.min.js'
    '@BKCoreBundle/Resources/public/assets/js/waypoints-sticky.min.js'
    '@BKCoreBundle/Resources/public/assets/js/headhesive.min.js'
    '@BKCoreBundle/Resources/public/assets/mailchimp/js/mailing-list.js'
    '@BKCoreBundle/Resources/public/assets/js/scripts.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script src="//load.sumome.com/" data-sumo-site-id="92f0b1f8732995232a813fbf01fde978f7b7662d9de4bc285475e60b9f5bf4a6" async></script>
{% endblock foot_scripts %}
</body>
</html>