<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <!--[if IE]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
    <title>{% block page_title %}The first virtual marketer ever - Beeketing{% endblock page_title %}</title>

    <meta property="og:image" content="{{ asset('facebook-share.png', null, true) }}"/>
    <meta name="description"
          content="Beeketing, the first virtual marketer ever help businesses plan and execute the best marketing strategy to increase sales and improve customer relationship."/>
    <meta name="keywords" content="beeketing, marekting automation, email markerting"/>

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>

    {% block head_styles %}
        <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700' rel='stylesheet' type='text/css'>

        <link rel="stylesheet" href="{{ asset('bundles/bkcore/assets/css/bootstrap.min.css') }}" type="text/css"
              media="all"/>
        <link rel="stylesheet" href="{{ asset('bundles/bkcore/assets/css/font-awesome.min.css') }}" type="text/css"
              media="all"/>
        <link rel="stylesheet" href="{{ asset('bundles/bkcore/assets/css/font-lineicons.css') }}" type="text/css"
              media="all"/>
        <link rel="stylesheet" href="{{ asset('bundles/bkcore/assets/css/animate.css') }}" type="text/css" media="all"/>
        <link rel="stylesheet" href="{{ asset('bundles/bkcore/assets/css/toastr.min.css') }}" type="text/css"
              media="all"/>
        <link rel="stylesheet" href="{{ asset('bundles/bkcore/assets/css/style.css') }}" type="text/css" media="all"/>
    {% endblock head_styles %}

    {% block head_scripts %}
        <!--[if lt IE 9]>
        {% javascripts
        '@BKCoreBundle/Resources/public/assets/js/html5.js'
        '@BKCoreBundle/Resources/public/assets/js/respond.min.js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <![endif]-->
    {% endblock head_scripts %}
</head>

<body id="landing-page">

<!-- Preloader -->
<div id="mask">
    <div id="loader"></div>
</div>

<header>
    <nav class="navigation navigation-header">
        <div class="container">
            {% block navigation %}
                <div class="navigation-brand">
                    <div class="brand-logo">
                        <a href="{{ path('bk_core_homepage') }}" class="logo" title="Beeketing">
                            <span class="sr-only">Beeketing</span></a>
                    </div>
                </div>
            {% endblock navigation %}
        </div>
    </nav>
</header>

{% block main_content %}{% endblock main_content %}

{% block footer %}
    <footer id="footer" class="footer light">
        <div class="container">
            <div style="height: 120px;"></div>
            <div class="social-links">
                <ul class="nav nav-pills">
                    <li class="facebook">
                        <iframe src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fbeeketing&amp;width=100&amp;layout=button_count&amp;action=like&amp;show_faces=false&amp;share=false&amp;height=21"
                                scrolling="no" frameborder="0"
                                style="border:none; overflow:hidden; width:100px; height:21px;"
                                allowTransparency="true"></iframe>
                    </li>
                    <li class="twitter">
                        <iframe allowtransparency="true" frameborder="0" scrolling="no"
                                src="//platform.twitter.com/widgets/follow_button.html?screen_name=beeketing"
                                style="width:200px; height:20px;"></iframe>
                    </li>
                </ul>
            </div>
        </div>
        <div class="copyright"><a style="color: white;" href="mailto:quan@beeketing.com">Contact Us</a> | &copy;
            Beeketing 2014. All rights reserved.
        </div>
    </footer>
{% endblock footer %}

<div class="back-to-top"><i class="fa fa-angle-up fa-3x"></i></div>

{% block foot_scripts %}
    {% javascripts
    '@BKCoreBundle/Resources/public/assets/js/jquery-1.11.0.min.js'
    '@BKCoreBundle/Resources/public/assets/js/bootstrap.min.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.flexslider-min.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.nav.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.appear.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.plugin.js'
    '@BKCoreBundle/Resources/public/assets/js/jquery.countdown.js'
    '@BKCoreBundle/Resources/public/assets/js/waypoints.min.js'
    '@BKCoreBundle/Resources/public/assets/js/waypoints-sticky.min.js'
    '@BKCoreBundle/Resources/public/assets/js/headhesive.min.js'
    '@BKCoreBundle/Resources/public/assets/mailchimp/js/mailing-list.js'
    '@BKCoreBundle/Resources/public/assets/js/scripts.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% if ga_tracking_id %}
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r;
            i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date();
            a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0];
            a.async = 1;
            a.src = g;
            m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', '{{ ga_tracking_id }}', 'auto');
        ga('send', 'pageview');

    </script>
    {% endif %}
{% endblock foot_scripts %}
</body>
</html>